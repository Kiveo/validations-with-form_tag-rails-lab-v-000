<h1>Edit Author</h1>

<%= form_tag author_path(@author) do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "PhoneNumber" %>
    <%= telephone_field_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Update" %>
<% end %>
